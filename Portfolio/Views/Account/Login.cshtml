@model Login

<form asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="All" class="text-bg-danger"></div>
    <div class="form-group">
        <label for="exampleInputEmail1">User Name</label>
        <input asp-for="UserNameOrEmail" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<a asp-controller="Account" asp-action="Register">
    Register
</a>